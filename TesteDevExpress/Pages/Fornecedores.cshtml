@page
@{
    ViewData["Title"] = "Fornecedores";
    Layout = "~/Pages/_DevExtremeLayout.cshtml";
}

<h2>Fornecedores x</h2>

@(Html.DevExtreme().DataGrid<TesteDevExpress.Models.Fornecedores>()
    .DataSource(ds => ds.Mvc()
        .Controller("api/Fornecedores")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("Id")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.Nome);

        columns.AddFor(m => m.Ativo);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)
